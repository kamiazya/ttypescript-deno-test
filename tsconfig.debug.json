{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "rootDir": "debug",
    "outDir": "debug-output",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "plugins": [
      {
        "transform": "./src/transformer.ts"
      }
    ]
  },
  "include": [
    "debug"
  ]
}
